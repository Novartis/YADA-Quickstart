<suite name="http-noauth-suite" parallel="false" preserve-order="true">
  <parameter name="properties" value="/conf/TestNG_YADA_Internal_noauth.properties" />
  <test enabled="true" name="HTTP_yada_host">
    <groups>
      <run>
        <!-- <include name="core"/> -->
        <include name="internal" />
